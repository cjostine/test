<?xml version="1.0" encoding="UTF-8"?>
<datasources xmlns="http://www.jboss.org/ironjacamar/schema">
	<datasource jndi-name="java:salesAndCostDetails"
		pool-name="salesAndCostDetails-DSPool">
		<jndi-name>salesAndCostDetails</jndi-name>
		<connection-url>jdbc:oracle:thin:@gpshpc76.tsg.ge.com:1552:gpshpc76
		</connection-url>
		<driver>oracle</driver>
		<pool>
			<min-pool-size>5</min-pool-size>
			<max-pool-size>100</max-pool-size>
		</pool>
		<security>
			<user-name>GEPSCSPORTAL</user-name>
			<password>GEPSCSPORTAL1234</password>
		</security>
		<statement>
			<track-statements>true</track-statements>
		</statement>
